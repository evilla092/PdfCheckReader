<div class="d-flex justify-content-center my-4">
    <form id="employer_form" action="/documents/loading" method="get">
        <p>Please select the employer that this check belongs to: </p>
        <select name="employer_id" id="employer_id" class="form-select">
            <% Employer.all.each do |employer| %>
                <option value="<%= employer.id %>"><%= employer.name %></option>
            <% end %>
        </select>
        <input type="hidden" name="s3_name" id="s3_name" value="<%= params[:s3_name] %>">
        <input type="submit" value="Submit" class="btn btn-dark mt-2">
    </form>
</div>
